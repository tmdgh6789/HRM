<UserControl x:Class="BaobabHRM.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaobabHRM"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="1024" d:DesignWidth="1280">
    
    <UserControl.DataContext>
        <local:UserViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <TabControl>
            <TabItem Header="출근 퇴근">
                <local:UserMainItemView/>
            </TabItem>
            <TabItem Header="야근 신청">
                <local:UserOverItemView/>
            </TabItem>
            <TabItem Header="휴가 신청">
                <local:UserOffItemView/>
            </TabItem>
            <TabItem Header="로그인">
                <local:LoginPopup HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
